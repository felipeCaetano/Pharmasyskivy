<CampoTexto@MDTextField>:
    padding: 0,10,10,50
    mode:'rectangle'
    color_mode: 'custom'
    helper_text_mode: 'on_error'
    text_color: .15,.15,.95,.5
    current_hint_text_color: .15,.15,.15,.81
    size_hint: None, None
    multiline: False
    write_tab: False
    width: '310dp'
    height: self.height
    max_height: '80dp'